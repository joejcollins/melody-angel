    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Cargo test",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib"
                ]
            },
            "args": []
        },

        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in library 'melody_angel'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=melody_angel"
                ],
                "filter": {
                    "name": "melody_angel",
                    "kind": "lib"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug integration test 'sublist'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--test=sublist",
                    "--package=melody_angel"
                ],
                "filter": {
                    "name": "sublist",
                    "kind": "test"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}